<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.9.0" client="site" method="upgrade">
    <name>Church Calendar</name>
    <author>Ulrich Rueth</author>
	 <authorEmail>code@rueth.info</authorEmail>
	 <authorUrl>http://www.rueth.info</authorUrl>
	 <copyright>Copyright 2018 Ulrich Rueth</copyright>
	 <license>Code released under the [GNU GPL 3.0]
		(https://github.com/UlricusR/joomla-churchcal/blob/master/LICENSE) license.
	 </license>
	 <version>1.0.0</version>
    <description>Displays a calendar taken from ChurchTools</description>
    <files>
        <filename>mod_churchcal.xml</filename>
        <filename module="mod_churchcal">mod_churchcal.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <scriptfile>script.php</scriptfile>
    <config>
	    <fields name="params">
	    	<fieldset name="basic">
	    		<field
	    			name="calurl"
	    			type="URL"
	    			label="ChurchCal URL"
	    			description="TODO" />
	    		<field
	    			name="calids"
	    			type="text"
	    			label="Calendar IDs"
	    			description="TODO Comma-separated list w/o blanks with all calendar IDs to be selected"
	    			pattern="[0-9]+([,][0-9]+)*" />
	    		<field
	    			name="calfrom"
	    			type="text"
	    			label="From day"
	    			default="0"
	    			hint="0"
	    			description="TODO"
	    			pattern="[0-9]+" />
	    		<field
	    			name="calto"
	    			type="text"
	    			label="To day"
	    			default="14"
	    			hint="14"
	    			description="TODO"
	    			pattern="[0-9]+" />
	    		<field
	    			name="calsorting"
	    			type="list"
	    			default="0"
	    			label="Sorting"
					description="TODO">
					<option value="0">Ascending</option>
					<option value="1">Descending</option>
				</field>
				<field
					name="caldisplayweekday"
					type="radio"
					label="Display weekday"
					default="1"
					description="TODO">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="calweekdayseparator"
					type="text"
					label="Weekday separator"
					class="btn-group"
					showon="caldisplayweekday:1"
	    			default=", "
	    			hint=", "
	    			description="TODO" />
	    		<field
	    			name="caldatetimeformat"
					type="text"
					label="Calendar date/time format"
	    			default="j.n.y, G:i"
	    			hint="j.n.y, G:i"
	    			description="TODO" />
				<field
					name="caldescriptionseparator"
					type="text"
					label="Description separator"
					default=": "
	    			hint=": "
	    			description="TODO" />
	    	</fieldset>
	    </fields>
    </config>
</extension>